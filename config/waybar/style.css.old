    background-color: #4A2C1B;
    margin: 4px;
    border-radius: 0 8 8 0px;
    color: #FAFAFA;
    border: 1px solid #A8A29E;
}
#custom-notifications:hover {
    background-color: #3F2A1D;
}

#custom-drawer {
    background-color: #4A2C1B;
    border-radius: 8px;
    margin: 4px;
    color: #FAFAFA;
    border: 1px solid #A8A29E;
}
#custom-drawer:hover {
  background-color: #3F2A1D;
}

#custom-search {
    background-color: #4A2C1B;
    border-radius: 8px;
    margin: 4px;
    color: #FAFAFA;
    border: 1px solid #A8A29E;
}
#custom-search:hover {
  background-color: #3F2A1D;
}

#custom-nightlight {
    background-color: #713F2E;
    margin: 4 0 4 0px;
    border: 1px solid #B8B8B0;
    border-left: none;
}

#custom-nightlight:hover {
    background-color: #4C2B20;
}

#custom-nightlight.on {
    color: orange;
}

#custom-layout {
    background-color: #713F2E;
    margin: 4 0 4 4px;
    border-radius: 8 0 0 8px;
    color: #ffffff;
    border: 1px solid #B8B8B0;
    border-right: none;
    padding-left: 15px;
}

#custom-layout:hover {
    background-color: #4C2B20;
}

#custom-separator {
    color: #B8B8B0;
    background-color: #713F2E;
    margin: 4 0 4 0px;
    border: 1px solid #B8B8B0;
    border-left: none;
    border-right: none;
    padding: 0 2 0 6px;
}

#taskbar{
    border-radius: 0 8 8 0px;
    margin: 4 4 4 0px;
    background-color: #713F2E;
    border: 1px solid #B8B8B0;
    border-left: none;
    padding: 0 4 0 4px;
}
#taskbar button{
    padding: 0 8px;
    border-radius: 0px;
}

#taskbar button.active {
    border-radius: 0px;
    box-shadow: inset 0 -3px #B8B8B0;
}

#taskbar button:hover {
    border-radius: 0px;
    background-color: #4C2B20;
}

#custom-thorium {
    margin: 4 0 4 4px;
    border-radius: 8 0 0 8px;
    background-color: #713F2E;
    border: 1px solid #B8B8B0;
    border-right: none;
}

